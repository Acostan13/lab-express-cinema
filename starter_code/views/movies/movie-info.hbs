<div class="movie-container">
    <div class="movie-img">
        <img src="{{theMovie.image}}" alt="movie poster">
    </div>
    <div class="movie-info">
        <a href="/movies">Go back</a>
        <h2>{{theMovie.title}}</h2>
        <h3>{{theMovie.director}}</h3>
        <ul>
            {{#each theMovie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{theMovie.description}}</p>
        <ul class="movie-times">
            {{#each theMovie.showtimes}}
                <li>{{this}} |</li>
            {{/each}}
        </ul>
    </div>
</div>